<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_alignParentTop="true"
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:text="Welcome to Restaurant"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="2dp"
            android:text="Sign In to continue"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/heading"
        android:id="@+id/ETphone_number"
        android:layout_margin="15dp"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/login_username"
            android:hint="Enter Username"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/phoneno_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <EditText
            android:id="@+id/login_phoneno"
            android:hint="Enter Mobile Number"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:background="@drawable/phoneno_et"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:maxLength="10"/>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/ETphone_number"
        android:id="@+id/get_otp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/Get_otp"
            android:padding="5dp"
            android:text="GET OTP"
            android:textStyle="bold"
            android:background="@drawable/nextbtn"
            android:layout_width="300dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/get_otp"
        android:id="@+id/or"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="5dp"
            android:text="OR"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:layout_width="350dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/SignIn_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/or"
        android:gravity="center">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_login"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:text="Log In with" />


        <com.facebook.login.widget.LoginButton
            android:id="@+id/facebook_login"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/cityparcel_logo" />



</RelativeLayout>

</LinearLayout>
