<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F46833"
        >
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_arrow_back"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="  Payment"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/revieworder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/otpedittext"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Order Summary"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Sub Total"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text=" 850"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Discount"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="-100"
                    android:textSize="15dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Coupon Discount"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="0"
                    android:textSize="15dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Tax"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="50"
                    android:textSize="15dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Delivery Charges"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="Free"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="15dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Grand Total"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="900"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="( 4 items )"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:src="@drawable/ic_baseline_arrow_drop_down" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:text="Ship to"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:paddingHorizontal="15dp"
                    android:text="Edit"
                    android:textSize="15dp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Rahul Shah"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:background="@drawable/otpedittext"
                    android:gravity="center"
                    android:text="Home"
                    android:textColor="@android:color/holo_green_dark" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="D-276,Oshiwara Ind Estate,Opp King Circle,Sion,Mumbai,Maharastra-400022,India" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="+91 9833045917" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:padding="5dp"
                android:text="shinganrushikesh@gmail.com" />


        </LinearLayout>

        <Button
            android:id="@+id/paynow"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/revieworder"
            android:layout_marginHorizontal="60dp"
            android:background="@drawable/nextbtn"
            android:text="Pay Now"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </RelativeLayout>
</LinearLayout>