<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Verify_otp">


    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="1dp"
                android:text="Provide your Birthdate &amp; Anniversary Date"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="2dp"
                android:text="Don't worry your record will be saved securely will"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="2dp"
                android:text="not share with anyone"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/heading"
            android:id="@+id/lay_imageview"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="3000dp"
                android:layout_height="250dp"
                android:src="@drawable/birthandanniversary"/>

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/lay_imageview"
            android:id="@+id/dates"
            android:layout_margin="1dp"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/birthdate"
                android:drawableRight="@drawable/calendar"
                android:hint="Birth Date"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_margin="5dp"                android:background="@drawable/phoneno_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

            <TextView
                android:id="@+id/anniversarydate"
                android:drawableRight="@drawable/calendar"
                android:hint="Anniversary Date"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/phoneno_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="2dp"
                android:text="You will receive Special Offers &amp; Discounts on "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="2dp"
                android:text="Your Birthday &amp; Anniversary "
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/dates"
            android:id="@+id/submit_dates"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit_date"
                android:padding="5dp"
                android:text="SUBMIT"
                android:textStyle="bold"
                android:background="@drawable/nextbtn"
                android:layout_width="350dp"
                android:layout_height="50dp"/>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>

</ScrollView>