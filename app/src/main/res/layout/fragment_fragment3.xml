<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_alignParentTop="true"
            android:id="@+id/lay_skipbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/skip_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=""
                android:textAlignment="viewEnd"
                android:textSize="25dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/lay_skipbtn"
            android:id="@+id/lay_imageview"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/pagerimg_3"/>

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/lay_imageview"
            android:id="@+id/text"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Delivery Arrived"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:padding="1dp"
                android:fontFamily="sans-serif-black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Order is arrived at your place"
                android:gravity="center"
                android:textSize="15dp"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/text"
            android:gravity="center"
            android:id="@+id/lay_nextbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/nextbtn"
                android:id="@+id/next"
                android:text="Get Started"
                android:gravity="center"
                android:layout_width="180dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
</ScrollView>