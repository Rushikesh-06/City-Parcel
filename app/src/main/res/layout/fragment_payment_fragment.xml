<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment_fragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Payment Option"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/otpedittext"
            android:id="@+id/typeofpayment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radiogroup_paymentoption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Credit or Debit Card"
                android:textSize="15dp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="UPI Payment"
                android:textSize="15dp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Cash on delivery"
                android:textSize="15dp"
                android:layout_margin="5dp"/>
            </RadioGroup>
        </LinearLayout>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Delivery Option"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="@color/black"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/otpedittext"
            android:id="@+id/delivery_option"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radiogroup_deliveryoption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Home Delivery"
                android:textSize="15dp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text=" Pickup"
                android:textSize="15dp"
                android:layout_margin="5dp"/>
            </RadioGroup>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Summary"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/black"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:text="Sub Total"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="850"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:text="Discount"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="-100"
                        android:textSize="15dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:text="Coupon Discount"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="0"
                        android:textSize="15dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:text="Tax"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="50"
                        android:textSize="15dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:text="Delivery Charges"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="Free"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="15dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:text="Grand Total"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="900"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:padding="5dp"
                        android:text="( 4 items )"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:src="@drawable/ic_baseline_arrow_drop_down"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:padding="3dp"
                        android:text="Ship to"
                        android:textSize="17dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:text="Edit"
                        android:textSize="15dp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_marginHorizontal="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="32dp"
                        android:text="Rahul Shah"
                        android:gravity="center_vertical"
                        android:textSize="15dp"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Home"
                        android:gravity="center"
                        android:textColor="@android:color/holo_green_dark"
                        android:background="@drawable/otpedittext"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D-276,Oshiwara Ind Estate,Opp King Circle,Sion,Mumbai,Maharastra-400022,India"
                    android:padding="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91 9833045917"
                    android:padding="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="shinganrushikesh@gmail.com"
                    android:padding="5dp"
                    android:layout_marginBottom="30dp"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    </ScrollView>

</FrameLayout>