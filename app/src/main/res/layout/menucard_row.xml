<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_gravity="center"
            android:layout_height="160dp"
            android:elevation="5dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">


            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:src="@android:color/white">
            </ImageView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dishtitle"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dish Title"
            android:textSize="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.200"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                >
            </TextView>
            <TextView
                android:id="@+id/serves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serves 2"
                android:textSize="13dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                >
            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/dish_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discription"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray"
            >
        </TextView>
        <TextView
            android:visibility="gone"
            android:id="@+id/discription2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discription 2"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/darker_gray"
            >
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <ImageView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:text="Add"
                android:src="@drawable/ic_baseline_remove_circle"

                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_height="30dp">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:textColor="@android:color/black"
                >
            </TextView>

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:text="Add"
                android:src="@drawable/ic_baseline_add_circle"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_height="30dp">

            </ImageView>

            <Button
                android:id="@+id/add_menu"
                android:layout_width="65dp"
                android:text="Add"
                android:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/nextbtn"
                android:textColor="@android:color/white"
                android:layout_height="27dp">

            </Button>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>